@model PagingList<BookShop.WebUi.Mediator.Books.Queries.GetBooks.GetBooksRes>
@{

}
<div>
    <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#filter" role="button" aria-controls="filter">
        <i class="bi-filter"></i>
        Filter Data
    </a>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi-plus"></i>New
    </a>

</div>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(a=>a.NameThai)</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NameThai</td>
                        <td>@item.NameEng</td>
                        <td>@item.Isbn</td>
                        <td>@item.Publisher.Name</td>
                        <td>@item.CoverPrice</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<div id="filter" class="offcanvas offcanvas-start" tabindex="-1" aria-labelledby="filterLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="filterLabel">Filter Data</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div>
            Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
        </div>
        <div class="dropdown mt-3">
            
        </div>
    </div>
</div>